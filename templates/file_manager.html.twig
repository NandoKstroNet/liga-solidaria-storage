{% extends "layouts/layout.html.twig" %}

{% block title %}File mananger{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-3">
        <h4>Grupos de arquivos</h4>
        <ul class="nav nav-tabs nav-stacked">
            <li class="active"><a href="#">file 1</a></li>
            <li><a href="#">file 2</a></li>
            <li><a href="#">file 3</a></li>
        </ul>
    </div>

    <div class="col-md-9">
        <h4>Files 1</h4>
        <ul class="thumbnails">
            {% autoescape %}
            {% for item in iterator %}
                {% if not item.isDot %}
                    {% if item.isDir %}
                    <li class="col-md-3">
                        <div class="thumbnail">
                            <img src="https://raw.github.com/designmodo/Flat-UI/master/images/icons/Pocket@2x.png"
                                alt=""
                                width="100px">
                            <div class="caption">
                                <h4>{{ item.filename }}</h4>
                                <a href="{{ item.filename }}/"
                                    class="btn btn-mini btn-primary">
                                    Ver arquivos
                                </a>
                            </div>
                        </div>
                    </li>
                    {% else %}
                    <li class="col-md-3">
                        <div class="thumbnail">
                            <img src="https://raw.github.com/designmodo/Flat-UI/master/images/demo/html-icon.png"
                                alt=""
                                width="100px">
                            <div class="caption">
                                <h4>{{ item.filename }}</h4>
                                <a href="{{ item.filename }}"
                                    class="btn btn-mini btn-primary">Baixar</a>
                                <a href="#" class="btn btn-mini btn-danger">Excluir</a>
                            </div>
                        </div>
                    </li>
                    {% endif %}
                {% endif %}
            {% endfor %}
            {% endautoescape %}
        </ul>
    </div>
</div>
{% endblock %}
